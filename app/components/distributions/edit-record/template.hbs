<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s12">
        {{input value=distribution.title placeholder="Title" id="distribution_record_title" type="text"}}
        <label for="distribution_record_title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        {{textarea value=distribution.description class="materialize-textarea" id="distribution_record_description"}}
        <label for="distribution_record_description">Description</label>
      </div>
    </div>
    <div class="row">
      <div class="waves-effect waves-light btn" {{action "save"}}>
        Save
      </div>
    </div>
  </form>
</div>
