<div class="container">
  {{catalogs/show-overview catalog=model}}

  <div class="row">
    <div class="col s12 m3">
      {{link-to "catalogs" "catalogs" classNames="btn"}}
    </div>
    <div class="col s12 m3">
      {{#link-to 'datasets.new' classNames="waves-effect waves-light btn"}}
        Add dataset
      {{/link-to}}
    </div>
    <div class="col s12 m3">
      {{link-to "edit" "catalogs.catalog.edit" classNames="btn"}}
    </div>
    <div class="col s12 m3">
      <div class="btn red" {{action "destroy" model}}>
        Destroy
      </div>
    </div>
  </div>

  {{catalogs/show-datasets catalog=model}}

</div>
